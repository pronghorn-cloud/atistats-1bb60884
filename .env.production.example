# AI-Academy 3 ATI Stats - Production Environment Configuration
# Copy this file to .env.production and configure for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name
APP_NAME="ATI Stats"

# Disable debug mode in production!
DEBUG=false

# Host and port (internal, nginx handles external)
HOST=0.0.0.0
PORT=8000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for JWT tokens and session encryption
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-key-change-this-in-production

# CORS allowed origins (JSON array format)
# Example: ["https://ati-stats.example.com", "https://admin.ati-stats.example.com"]
ALLOWED_ORIGINS=["https://ati-stats.example.com"]

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# PostgreSQL connection URL
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://ati_stats:your-secure-password@db:5432/ati_stats

# Database credentials (used by docker-compose)
POSTGRES_USER=ati_stats
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_DB=ati_stats

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis connection URL for caching
REDIS_URL=redis://redis:6379/0

# =============================================================================
# DOCKER/DEPLOYMENT SETTINGS
# =============================================================================

# External port for the application (behind nginx)
APP_PORT=8000

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry DSN for error tracking (optional but recommended)
# Get your DSN from https://sentry.io
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# EMAIL SETTINGS (for notifications)
# =============================================================================

# SMTP configuration (optional)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@ati-stats.example.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
# ENABLE_REGISTRATION=false
# ENABLE_API_DOCS=true
# MAINTENANCE_MODE=false
